<div class="products">

    <div class="grid">

        {% for product in products %}

            <a href="{{ path('app_product_show', {'id':  product.id}) }}"
               class="product {{ product.available ? "" : "unavailable" }}">
                <div class="img">
                    <img src="/uploads/{{ product.image }}"
                         onerror="this.onerror=null; this.src = 'https://images.unsplash.com/photo-1589998059171-988d887df646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1476&q=80'"/>
                </div>
                <h3> {{ product.name }}</h3>
                <p>{{ product.price }} â‚¬</p>
            </a>

        {% else %}

            <p>No product records found, wait for the administrator to do his job please :).</p>


        {% endfor %}
    </div>

</div>